{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ESNext",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./dts/**/*.ts",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "*.config.ts",
    "./eslint.config.mjs"
  ]
}
