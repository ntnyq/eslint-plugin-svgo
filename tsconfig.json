{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2022"],
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "resolveJsonModule": true,
    "erasableSyntaxOnly": true,
    "libReplacement": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./dts/**/*.ts",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "*.config.ts"
  ]
}
